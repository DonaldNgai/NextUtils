{
  "name": "@DonaldNgai/next-utils",
  "version": "1.0.0",
  "description": "Next.js utility functions",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./server/preferences": {
      "import": "./src/server/preferences.ts",
      "require": "./src/server/preferences.ts",
      "types": "./src/server/preferences.ts"
    },
    "./payments/stripe": {
      "import": "./src/payments/stripe.ts",
      "require": "./src/payments/stripe.ts",
      "types": "./src/payments/stripe.ts"
    },
    "./payments/subscription": {
      "import": "./src/payments/subscription.ts",
      "require": "./src/payments/subscription.ts",
      "types": "./src/payments/subscription.ts"
    },
    "./auth": {
      "import": "./src/auth/index.ts",
      "require": "./src/auth/index.ts",
      "types": "./src/auth/index.ts"
    },
    "./auth/users": {
      "import": "./src/auth/users.ts",
      "require": "./src/auth/users.ts",
      "types": "./src/auth/users.ts"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "nextjs",
    "utils",
    "utilities"
  ],
  "author": "DonaldNgai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DonaldNgai/NextUtils.git"
  },
  "publishConfig": {
    "@DonaldNgai:registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.11.0",
    "@auth0/auth0-spa-js": "^2.11.0",
    "auth0": "^4.8.0",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.8"
  },
  "peerDependencies": {
    "@auth0/nextjs-auth0": "^4.13.2",
    "@tanstack/react-table": "^8.21.3",
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.18.12",
    "@types/react": "19.1.4",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3"
  }
}
